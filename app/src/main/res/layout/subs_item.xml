<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/subs_main"
        android:layout_width="230dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ellipse2"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="5dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <View
                android:id="@+id/view2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:elevation="5dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/ellipse2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <View
                android:id="@+id/view1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="36dp"
                android:elevation="5dp"
                android:background="@drawable/ellipse2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"></View>

            <TextView
                android:id="@+id/subs_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="25dp"
                android:elevation="5dp"
                android:fontFamily="@font/circular_bold"
                android:text="Premium"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:fontFamily="@font/circular"
                android:text="7 day trial"
                app:layout_constraintStart_toStartOf="@+id/subs_name"
                app:layout_constraintTop_toBottomOf="@+id/subs_name"></TextView>

            <TextView
                android:id="@+id/subs_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:fontFamily="@font/circular"
                android:text="After trail, pay ₹ 1499 per month"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4"></TextView>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="27dp"
                android:elevation="5dp"
                android:src="@drawable/line_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subs_price"></ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"
                android:elevation="5dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/circular_bold"
                    android:text="Feature 1"
                    android:textColor="@color/white"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/feature1tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/circular"
                    android:text="After trail, pay ₹ 1499 per month"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/circular_bold"
                    android:text="Feature 2"
                    android:textColor="@color/white"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/feature2tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/circular"
                    android:text="After trail, pay ₹ 1499 per month"
                    android:textSize="10sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/circular_bold"
                    android:text="Feature 3"
                    android:textColor="@color/white"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/feature3tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:elevation="5dp"
                    android:fontFamily="@font/circular"
                    android:text="After trail, pay ₹ 1499 per month"
                    android:textSize="10sp"></TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="6dp"
                android:elevation="5dp"
                android:src="@drawable/line_14"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"></ImageView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="25dp"
                android:elevation="5dp"
                android:fontFamily="@font/circular_bold"
                android:text="Know more"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>