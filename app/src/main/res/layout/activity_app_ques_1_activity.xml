<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questionare.App_ques_1_activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_namaha___21_ek1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:max="100"
            android:progress="20"
            android:progressBackgroundTint="#E0E0E0"
            android:progressTint="#FFE401"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/do_you_yoga_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/circular_bold"
            android:text="What should we call you ?"
            android:textColor="@color/don_t_just_work_out__work_in__color"
            android:textSize="24sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress" />

        <TextView
            android:id="@+id/this_helps_us_personalize_your_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/circular"
            android:text="Pick a nickname !"
            android:textColor="@color/this_helps_us_personalize_your_experience_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/do_you_yoga_" />


        <EditText
            android:id="@+id/nickname_edt"
            android:layout_width="302dp"
            android:layout_height="54dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/namaha19_edtback"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/circular"
            android:gravity="center_horizontal"
            android:hint="Enter your nickname"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="20sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/this_helps_us_personalize_your_experience"></EditText>

        <View
            android:id="@+id/rectangle_132"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/rectangle_132_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/button_back"
            android:layout_width="216dp"
            android:layout_height="54dp"
            android:background="@color/black"
            android:backgroundTint="#303030"
            android:elevation="15dp"
            app:cardCornerRadius="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_132"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_132"
            app:layout_constraintStart_toStartOf="@+id/rectangle_132"
            app:layout_constraintTop_toTopOf="@+id/rectangle_132">

            <Button
                android:id="@+id/ques1_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:elevation="15dp"
                android:fontFamily="@font/circular"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"></Button>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>